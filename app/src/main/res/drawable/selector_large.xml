<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:left="-1dp">
                <shape>
                    <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/color_464646"/>
                    <solid android:color="@color/color_464646"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:left="-1dp">
                <shape>
                    <corners android:topRightRadius="5dp" android:bottomRightRadius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/color_464646"/>
                    <solid android:color="@color/color_ffffff"/>
                </shape>
            </item>
        </layer-list>

    </item>

</selector>